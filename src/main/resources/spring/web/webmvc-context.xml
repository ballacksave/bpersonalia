<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:repository="http://www.springframework.org/schema/data/repository"
	xsi:schemaLocation="http://www.springframework.org/schema/data/repository http://www.springframework.org/schema/data/repository/spring-repository-1.7.xsd
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd">

	<!-- 
	All class annotated with spring stereo-type annotation 
	(@Component, @Repository, @Service, @Controller) inside "sample" package 
	will be picked up by spring container and registered as beans.
	-->
	<context:component-scan base-package="org.bareng.hr.web.controller">
	</context:component-scan>
	
	<!--
	Enable use annotation on mapping and handling request etc.
	-->
	<mvc:annotation-driven>
		<mvc:argument-resolvers>
			<bean class="org.springframework.data.web.PageableHandlerMethodArgumentResolver">
				<property name="fallbackPageable">
					<bean class="org.springframework.data.domain.PageRequest">
						<constructor-arg name="page" value="0" />
						<constructor-arg name="size" value="10" />
					</bean>
				</property>
			</bean>
			<bean class="org.springframework.data.web.PagedResourcesAssemblerArgumentResolver">
				<constructor-arg index="0">
					<bean class="org.springframework.data.web.HateoasPageableHandlerMethodArgumentResolver" />
				</constructor-arg>
				<constructor-arg index="1">
					<bean class="org.springframework.hateoas.mvc.ControllerLinkBuilderFactory">
					</bean>
				</constructor-arg>
			</bean>
		</mvc:argument-resolvers>
	</mvc:annotation-driven>
	
	<!--
	Configuration for view resolver.
	-->
	<mvc:view-resolvers>
		<mvc:jsp prefix="/WEB-INF/views/" suffix=".jsp"/>
	</mvc:view-resolvers>
	
	<!-- 
	Enable default servlet handler 
	-->
	<mvc:default-servlet-handler />
	
	<!--
	Enable to serve static resource via uri /statics/** from 
	- Web root's static directory, and 
	- Any webjars resources.
	-->
	<mvc:resources location="/statics/, classpath:META-INF/resources/webjars/" mapping="/statics/**"></mvc:resources>
	
	<!--
	List simple static view controller 
	-->
	<mvc:view-controller path="/" view-name="home" />
	<mvc:view-controller path="/forgot-password" view-name="forgot-password" />
	<mvc:view-controller path="/login" view-name="login" />
	<mvc:view-controller path="/not-found" view-name="not-found" status-code="404" />
	<mvc:view-controller path="/unauthorized" view-name="unauthorized" status-code="401" />
	<mvc:view-controller path="/access-denied" view-name="access-denied" status-code="403" />
	<mvc:view-controller path="/server-error" view-name="server-error" status-code="500" />
	
	<!-- 
	This is configuration class to simplify passing in and out pagination and sorting object, start from controller.
	Normally, this type will be registered when @EnableSpringDataWebSupport found on config class.
	-->
	<bean class="org.springframework.data.web.config.SpringDataWebConfiguration" />
</beans>
